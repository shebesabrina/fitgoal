<div id='calendar'></div>

<script type="text/javascript">
  $(function() {
    const calendar = $('#calendar');
    calendar.fullCalendar({
      header: {
        left: 'prev,next,today',
        center: 'title',
        right: 'month,agendaWeek,agendaDay'
        },
      selectable: true,
      selectHelper: true,
      editable: true,
      eventLimit: true,
      events:
      '<% @days.each do |day| %>'
      '<%= day.workout %><br>'
      '<% end %>'

    })
  });
</script>
